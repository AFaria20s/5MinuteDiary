<?xml version="1.0" encoding="utf-8"?><!-- activity_email_verification.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/subtle_bg_gradient"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Email Icon -->
        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/email_circle" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Verifica o teu email"
            android:textColor="#1F2937"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="Enviámos um link de verificação para\nexample@email.com"
            android:textColor="#6B7280"
            android:textSize="16sp" />

        <!-- Resend Button -->
        <Button
            android:id="@+id/resendButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#6366F1"
            android:text="Reenviar email"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="16dp" />

        <!-- Continue Button -->
        <Button
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF"
            android:text="Já verifiquei"
            android:textAllCaps="false"
            android:textColor="#6366F1"
            android:textSize="16sp"
            app:cornerRadius="16dp"
            app:strokeColor="#6366F1"
            app:strokeWidth="1dp" />

        <!-- Logout -->
        <TextView
            android:id="@+id/logoutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:text="Sair"
            android:textColor="#9CA3AF"
            android:textSize="14sp" />

        <!-- Loading -->
        <ProgressBar
            android:id="@+id/loadingProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:indeterminateTint="#6366F1"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>