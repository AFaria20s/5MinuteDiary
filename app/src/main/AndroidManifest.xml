<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.afonso.fiveminutediary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Main Activity -->
        <activity
            android:name=".viewmodel.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- List Activity -->
        <activity
            android:name=".viewmodel.ListActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".viewmodel.MainActivity" />

        <!-- Detail Activity -->
        <activity
            android:name=".viewmodel.DetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".viewmodel.ListActivity" />

        <!-- Profile Activity -->
        <activity
            android:name=".viewmodel.ProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".viewmodel.MainActivity" />

    </application>

</manifest>