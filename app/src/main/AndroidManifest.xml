<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.afonso.fiveminutediary">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- ===== AUTH ACTIVITIES ===== -->

        <!-- Login Activity - LAUNCHER (primeira tela) -->
        <activity
            android:name=".auth.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register Activity -->
        <activity
            android:name=".auth.RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".auth.LoginActivity" />

        <!-- Email Verification Activity -->
        <activity
            android:name=".auth.EmailVerificationActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".auth.LoginActivity" />

        <!-- ===== MAIN APP ACTIVITIES ===== -->

        <!-- Main Activity (requer autenticação) -->
        <activity
            android:name=".viewmodel.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- List Activity -->
        <activity
            android:name=".viewmodel.ListActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".viewmodel.MainActivity" />

        <!-- Detail Activity -->
        <activity
            android:name=".viewmodel.DetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".viewmodel.ListActivity" />

        <!-- Profile Activity -->
        <activity
            android:name=".viewmodel.ProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".viewmodel.MainActivity" />

        <!-- Profile Ativity -->
        <activity
            android:name=".viewmodel.ExpandedEditActivity"
            android:exported="false"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>